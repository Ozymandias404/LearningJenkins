pipeline {
agent none
    parameters {
        choice(name: 'PYSCRIPT', choices: ['hello', 'goodbye'], description: 'Choose script')
    }
    stages {
        stage('Python') {
            agent {
                docker { image 'python:3.11.0rc1-bullseye' }
            }
            steps {
                sh 'python --version'
                checkout scm
                sh 'ls -a'
                sh "python PythonFiles/${params.PYSCRIPT}.py"
            }
        }
    }
}